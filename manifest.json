{
  "name": "tax-fallback",
  "vendor": "vtex",
  "version": "0.0.4",
  "title": "Tax Fallback",
  "description": "API to get simple taxes when third party tax services aren't available",
  "mustUpdateAt": "2018-01-04",
  "categories": [],
  "dependencies": {},
  "builders": {
    "node": "6.x",
    "docs": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "settingsSchema": {
    "title": "Tax Fallback",
    "type": "object",
    "properties": {
      "avalaraLogin": {
        "title": "Login for Avalara (US) account",
        "type": "string"
      },
      "avalaraPassword": {
        "title": "Password for Avalara (US) account",
        "type": "string"
      }
    }
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "rest.avatax.com",
        "path": "/api/v2/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "sandbox-rest.avatax.com",
        "path": "/api/v2/*"
      }
    },
    {
      "name": "update-app-settings"
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/dataentities/*"
      }
    }
  ],
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
